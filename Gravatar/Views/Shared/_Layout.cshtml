<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/knockout")
</head>
<body style="text-align: center">
    <div style="width: 1024px; border: 10px solid #eaf4f5; text-align: center">
        <header style="text-align: left">
            <div id="header" class="header section">
                <div style="display: inline-block">
                    <a style="display: block; border: 0px none white" href="http://www.devcurry.com/">
                        <img style="display: block; border: 0px none white" alt="DevCurry" src="../../Content/devcurrylogo.png" />
                    </a>
                </div>
                <div style="display: inline-block">
                    <h1>
                        Contact List with Gravatar</h1>
                </div>
            </div>
        </header>
        <section>
            @RenderBody()
        </section>
        <footer>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jquery-ui")
        <script src="../../Scripts/jquery-ui-1.8.11.js" type="text/javascript"></script>
        <script src="../../Scripts/Gravatar/gravatar-sample.js" type="text/javascript"></script>
        <script src="../../Scripts/Gravatar/md5.js" type="text/javascript"></script>
        <script src="../../Scripts/knockout-2.0.0.js" type="text/javascript"></script>
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
